{
    "telegram": {
    "token": "REMOVED_AND_SET_AS_ENVIRONMENT_VARIABLE",
    "chat_id": "YOUR CHAT ID. ONLY NUMBER NO @NICKNAME",
    "super_admin_id": "REMOVED_TO_USERS_JSON",
    "authorized_users": "REMOVED_TO_USERS_JSON",
    "enviar_reporte_periodico": false
  },
  "gemini_api": {
    "enabled": true,
    "api_key": "REMOVED_AND_SET_AS_ENVIRONMENT_VARIABLE",
    "flash_model": "gemini-1.5-flash-latest",
    "pro_model": "gemini-1.5-pro-latest"
  },
  
  
  "fail2ban_jails": [
    "sshd",
    "nginx-http-auth",
    "postfix"
  ],
  "log_monitoring": {
    "enabled": true,
    "check_interval_seconds": 60,
    "watched_logs": [
      {
        "alias": "auth",
        "patterns": [
          "Failed password for",
          "Accepted publickey for"
        ]
      },
      {
        "alias": "nginx_error",
        "patterns": [
          "\\b(error|crit|alert|emerg)\\b"
        ]
      }
    ]
  },
  "monitoring_thresholds": {
    "check_interval_minutes": 5,
    "cpu_usage_percent": 90,
    "disk_usage_percent": 95
  },

  "image_directory": "~/telegram/imagenes",
  "file_directory": "~/telegram/ficheros",
  "scripts_permitidos": {
    "example1": "~/telegram/scripts/sh/example1.sh",
    "example2": "~/telegram/scripts/sh/example2.sh"
  },
  "python_scripts_permitidos": {
    "example1": "~/telegram/scripts/py/example1.py",
    "example2": "~/telegram/scripts/py/example2.py"
  },
  "backup_scripts": {
    "respaldo_completo_web": "~/telegram/scripts/sh/backup/backup_web_full.sh",
    "respaldo_base_de_datos": "~/telegram/scripts/sh/backup/backup_db_mysql.sh",
    "respaldo_docker_volumes": "~/telegram/scripts/sh/backup/backup_docker.sh",
    "respaldo_bot_telegram": "~/telegram/scripts/sh/backup/backup_bot.sh"
  },
  "servicios_permitidos": [
    "nginx",
    "telegram_bot",
    "mysql",
    "sshd",
    "postfix",
    "dovecot",
    "fail2ban"
  ],
  "docker_containers_allowed": [
    "my_web_app_container",
    "database_container",
    "another_service_container"
  ],
  "allowed_logs": {
    "auth": "/var/log/auth.log",
    "syslog": "/var/log/syslog",
    "kern": "/var/log/kern.log",
    "nginx_access": "/var/log/nginx/access.log",
    "nginx_error": "/var/log/nginx/error.log",
    "apache_access": "/var/log/apache2/access.log",
    "apache_error": "/var/log/apache2/error.log"
  },
  "monitoring_thresholds": {
    "cpu_usage_percent": 90,
    "disk_usage_percent": 95,
    "check_interval_minutes": 5,
    "last_cpu_check": 0,
    "last_disk_check": 0,
    "last_update_check": 0,
    "update_check_interval_hours": 24
  },
  
